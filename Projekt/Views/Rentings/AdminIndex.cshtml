@model IEnumerable<Projekt.Models.Renting>

@{
    ViewData["Title"] = "Borrowed Books (Admin)";
}

<h1>Borrowed Books (Admin)</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Book</th>
            <th>User</th>
            <th>Borrowed At</th>
            <th>Returned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Book?.Title</td>
                <td>@(r.AppUser?.Email ?? r.AppUserId)</td>
                <td>@r.RentedAt</td>
                <td>@(r.ReturnedAt?.ToString() ?? "-")</td>
                <td class="d-flex gap-2">

                    @if (r.ReturnedAt == null)
                    {
                        <form asp-action="AdminReturn" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-success">
                                End
                            </button>
                        </form>
                    }

                    <form asp-action="AdminDelete" method="post" class="d-inline"
                          onsubmit="return confirm('Na pewno usunąć to wypożyczenie?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
