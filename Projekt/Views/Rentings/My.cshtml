@model List<Projekt.Models.Renting>

@{
    ViewData["Title"] = "My Profile -  Borrowed Books";
}

<h2>My Profile</h2>
<p class="text-muted">List of Borrowed Books</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">You haven't borrowed any books. We hope you change that soon!</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Category</th>
                <th>Borrowed</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                var active = r.ReturnedAt == null;
                <tr>
                    <td>
                        <strong>@r.Book.Title</strong><br />
                        <span class="text-muted">@r.Book.Author</span>
                    </td>
                    <td>@(r.Book.Category?.Name ?? "-")</td>
                    <td>@r.RentedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (active)
                        {
                            <span class="badge bg-warning text-dark">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Returned</span>
                            <span class="text-muted">
                                (@r.ReturnedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm"))
                            </span>
                        }
                    </td>
                    <td>
                        @if (active)
                        {
                            <form asp-controller="Rentings" asp-action="Return" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="rentingId" value="@r.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Return</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
