@model IEnumerable<Projekt.Models.Book>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <label class="form-label">Author</label>
        <input type="text"
               name="author"
               value="@(ViewData["Author"] as string)"
               class="form-control"
               placeholder="example: Sapkowski, Lewis " />
    </div>

    <div class="col-md-4">
        <label class="form-label">Category</label>
        <select name="categoryId"
                class="form-select"
                asp-items="@(ViewData["Categories"] as SelectList)">
            <option value="">-- blank --</option>
        </select>
    </div>

    <div class="col-md-4 d-flex align-items-end gap-2">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>

        <!-- PRZYCISK KATEGORIE -->
        <a class="btn btn-outline-dark"
           asp-controller="Categories"
           asp-action="Index">
            Categories
        </a>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success ms-auto">Add Book</a>
        }
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No Books To Display.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Category</th>
                <th>Borrow</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td style="max-width: 400px;">@item.Description</td>
                    <td>@(item.Category?.Name ?? "-")</td>

                    <td>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <form asp-controller="Rentings" asp-action="Borrow" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-primary">
                                    Borrow
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-area="Identity" asp-page="/Account/Login">
                               Log In
                            </a>
                        }
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <span> | </span>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <span> | </span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
